<?xml version="1.0"?>
<ruleset name="Accessly Ruleset">
    <description>Accessly ruleset for PHP_CodeSniffer.</description>

    <!-- Define the coding standard to use (e.g., PSR-12) -->
    <rule ref="PSR12"/>

    <!-- Exclude certain directories or files -->
    <exclude-pattern>vendor/*</exclude-pattern>

    <!-- Define the files or directories to include -->
    <file>services/</file>
    <file>includes/</file>
    <file>config/</file>
    <file>utils/</file>
</ruleset>
